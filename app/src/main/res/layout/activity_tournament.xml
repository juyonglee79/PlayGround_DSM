<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/make_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="토너먼트 이름"
        android:textSize="30sp"
        android:textColor="#19B6B6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="설명"
        android:textColor="#19B6B6"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_tournament" />

    <TextView
        android:id="@+id/btn_tournament_apply"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/back_edittext"
        android:text="참가 신청"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/make_tournament"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/back_square"
        android:gravity="center"
        android:text="D"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/semifinal1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/semifinal2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/back_square"
        android:gravity="center"
        android:text="D"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/preliminaries4"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/semifinal1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/back_square"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/preliminaries1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/preliminaries1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/back_square"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/preliminaries2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/back_square"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/preliminaries1" />

    <TextView
        android:id="@+id/preliminaries3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/back_square"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/preliminaries2" />

    <TextView
        android:id="@+id/preliminaries4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/back_square"
        android:gravity="center"
        android:text="D"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/preliminaries3" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_marginStart="53dp"
        android:background="#FFEF0E"
        app:layout_constraintBottom_toTopOf="@+id/preliminaries1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="0dp"
        android:background="#FFEF0E"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/line3"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:background="#FFEF0E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semifinal1" />

    <TextView
        android:id="@+id/line4"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_marginEnd="130dp"
        android:background="#FFEF0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semifinal2" />

    <TextView
        android:id="@+id/line5"
        android:layout_width="78dp"
        android:layout_height="10dp"
        android:layout_marginEnd="52dp"
        android:background="#FFEF0E"
        app:layout_constraintBottom_toTopOf="@+id/line6"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/line6"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="0dp"
        android:background="#FFEF0E"
        app:layout_constraintBottom_toTopOf="@+id/preliminaries4"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/line7"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="0dp"
        android:background="#FFEF0E"
        app:layout_constraintBottom_toTopOf="@+id/semifinal2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/line8"
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="0dp"
        android:background="#FFEF0E"
        app:layout_constraintBottom_toTopOf="@+id/line7"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/line9"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#FFEF0E"
        app:layout_constraintEnd_toStartOf="@+id/line8"
        app:layout_constraintTop_toBottomOf="@+id/winner" />




</android.support.constraint.ConstraintLayout>