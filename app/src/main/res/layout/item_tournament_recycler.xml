<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/back_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_postTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="@color/main"
            android:gravity="center"
            android:text="성욱배 탁구대결"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="5dp"
            android:text="장소 : "
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="탁구장"
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/place"
            app:layout_constraintTop_toBottomOf="@+id/time" />

        <TextView
            android:id="@+id/setting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:text="모집기간 : "
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_postTitle" />

        <TextView
            android:id="@+id/tv_setting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="11/27 ~ 12/2"
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/setting_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_postTitle" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="5dp"
            android:text="기간 : "
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_setting_time" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="12/3 ~ 12/10"
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/tv_setting_time" />

        <TextView
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="5dp"
            android:text="인원 : "
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place" />

        <TextView
            android:id="@+id/tv_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="7 / 8"
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/people"
            app:layout_constraintTop_toBottomOf="@+id/place" />

        <Button
            android:id="@+id/btn_goingHow"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="8dp"
            android:background="#39b54a"
            android:text="자세히보기"
            android:textStyle="normal"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_enjoy"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="#3cbcb8"
            android:text="참여하기"
            android:textStyle="normal"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_goingHow" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/img_sports"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_tournament_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_sports_tournamet"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sports"
        app:layout_constraintEnd_toEndOf="@+id/img_sports"
        app:layout_constraintStart_toStartOf="@+id/img_sports" />


</android.support.constraint.ConstraintLayout>